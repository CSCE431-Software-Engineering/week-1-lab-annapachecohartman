<%= link_to("Back to Homepage", books_path, class: 'back-link') %>

<div class="books delete">
  <h2>Delete Book</h2>

  <%= form_for(@book, method: 'delete') do |b| %>
    <% # url: task_path(@task), method: 'delete' %>

    <p>Are you sure you want to permanently delete this book?</p>
    <p><i><%= @book.title %></i> by <%= @book.author %> </p>

    <div class="form-buttons">
      <%= b.submit("Delete Book") %>
    </div>

  <% end %>
</div>